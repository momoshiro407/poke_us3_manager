<h1>育成予定ポケモンの追加</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= form_for @untrained_monster, url: {action: :create} do |f| %>
      <%= render 'form', f: f %>
      <%= f.submit 'ポケモン作成', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>