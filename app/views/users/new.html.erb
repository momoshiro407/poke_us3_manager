<h1>新規ユーザー登録</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% flash.each do |message_type, message| %>
      <div class="alert alert-<%= message_type %>"><%= message %></div>
    <% end %>
    <%= form_for(@user) do |f| %>
      <%= render 'form', f: f %>
      <%= f.submit 'アカウント作成', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>